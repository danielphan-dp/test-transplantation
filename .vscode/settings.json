{
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSaveMode": "file",
        "editor.wordWrap": "on"
    },
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.outDir": "%DIR%/build",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.internal.port": 0,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk"
    ],
    "latex-workshop.latex.autoClean.run": "onFailed",

    // LaTeX linting
    "latex-workshop.linting.run": "onType",
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.linting.lacheck.enabled": true,

    // LaTeX formatting
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.formatting.latexindent.path": "latexindent",
    "latex-workshop.formatting.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-y=defaultIndent: '    '"
    ],
    "[latex]": {
        "editor.wordWrap": "on",
        "editor.formatOnSave": true
    },
    "latex-workshop.bibtex-format.sort.enabled": true,
    "latex-workshop.bibtex-format.sortby": [
        "author",
        "year-desc",
        "title"
    ],
    "latex-workshop.bibtex-format.handleDuplicates": "Highlight Duplicates",
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.bibtex-format.align-equal.enabled": true,
    "latex-workshop.bibtex-format.surround": "Curly braces",
    "latex-workshop.bibtex-format.case": "lowercase",
    "latex-workshop.bibtex-format.trailingComma": false,
    "latex-workshop.bibtex-fields.sort.enabled": true,
    "latex-workshop.bibtex-fields.order": [
        "author",
        "title",
        "year",
        "journal",
        "volume",
        "number",
        "pages"
    ],
}
